<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="tcpBinding"
						 transferMode="Streamed"
						 maxReceivedMessageSize="67108864"
						 openTimeout="00:01:00"
						 closeTimeout="00:01:00"
						 receiveTimeout="00:10:00"
						 sendTimeout="00:01:00" />
			</netTcpBinding>
		</bindings>
		<services>
			<service name="Service.SensorService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4000"/>
					</baseAddresses>
				</host>

				<endpoint
					address="SensorService"
					binding="netTcpBinding"
					bindingConfiguration="tcpBinding"
					contract="Common.ISensor" />

				
			</service>
		</services>

		
	</system.serviceModel>
		<appSettings>
			
			<add key="AQ_threshold" value="100000"/>
			<add key="RH_threshold" value="0.5"/>
			<add key="L_threshold" value="0.4"/>
			<add key="TresholdPrecentage" value="25"/>
		</appSettings>
</configuration>
